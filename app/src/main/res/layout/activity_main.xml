<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- CABECERA: Botón para abrir menú de conexión -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCurrentDevice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Desconectado"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <ImageButton
            android:id="@+id/btnToggleConnectionPanel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Buscar dispositivos" />
    </LinearLayout>

    <!-- PANEL DE CONEXIÓN (Oculto por defecto) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/panelConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#F5F5F5"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestión de Dispositivos"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado: Inactivo"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnScan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Escanear"
                    android:layout_marginEnd="4dp"/>
                <Button
                    android:id="@+id/btnDisconnect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Desconectar"
                    android:enabled="false"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDevices"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"/>
            <Button
                android:id="@+id/btnClosePanel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ocultar Panel"
                android:textColor="#555555"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CONTENEDOR DE CONTROLES SIN SCROLL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- RUEDA DE COLOR (Flexible) -->
        <com.chema.proyectofinalapkbluetooth.ColorWheelView
            android:id="@+id/colorWheel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/controlsArea"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- VISTA PREVIA (Flotante) -->
        <View
            android:id="@+id/viewSelectedColor"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="#FFFFFF"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/colorWheel"
            app:layout_constraintEnd_toEndOf="@+id/colorWheel"/>

        <!-- ÁREA DE CONTROLES INFERIORES -->
        <LinearLayout
            android:id="@+id/controlsArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Etiqueta Brillo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brillo"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- Brillo -->
            <SeekBar
                android:id="@+id/sbBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/seekbar_gradient"
                android:thumb="@drawable/seekbar_thumb"
                android:minHeight="20dp"
                android:maxHeight="20dp"
                android:splitTrack="false"/>

            <!-- Etiqueta Favoritos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favoritos"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <!-- Favoritos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button android:id="@+id/btnFav1" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:backgroundTint="#CCCCCC" android:layout_margin="4dp"/>
                <Button android:id="@+id/btnFav2" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:backgroundTint="#CCCCCC" android:layout_margin="4dp"/>
                <Button android:id="@+id/btnFav3" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:backgroundTint="#CCCCCC" android:layout_margin="4dp"/>
                <Button android:id="@+id/btnFav4" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:backgroundTint="#CCCCCC" android:layout_margin="4dp"/>
            </LinearLayout>

            <!-- Etiqueta Efectos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efectos"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
            
            <!-- Fila 1: Modos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button android:id="@+id/btnFlash" style="@style/Widget.AppCompat.Button.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rápido" android:textSize="10sp"/>
                <Button android:id="@+id/btnStrobe" style="@style/Widget.AppCompat.Button.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Intermitente" android:textSize="10sp" android:layout_marginStart="8dp"/>
                <Button android:id="@+id/btnFade" style="@style/Widget.AppCompat.Button.Small" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Suave" android:textSize="10sp" android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Fila 2: Música y Power -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <Button android:id="@+id/btnMusicMode" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Música" android:layout_marginEnd="4dp"/>
                <Button android:id="@+id/btnPower" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Power" android:backgroundTint="#E53935" android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>
        
        <!-- RadioGroup oculto -->
        <RadioGroup
            android:id="@+id/rgProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <RadioButton android:id="@+id/rbMagic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Magic"/>
            <RadioButton android:id="@+id/rbTriones" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Triones" android:checked="true"/>
            <RadioButton android:id="@+id/rbZengge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Zengge"/>
            <RadioButton android:id="@+id/rbGeneric" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Raw"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>