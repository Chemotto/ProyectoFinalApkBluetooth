<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/neon_background"
    tools:context=".MainActivity">

    <!-- Cabecera -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Control LED"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Desconectado"
        android:textColor="@android:color/white"
        app:chipBackgroundColor="#33FFFFFF" 
        app:chipIcon="@drawable/ic_bluetooth_disabled"
        app:chipIconTint="@android:color/white" 
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <!-- Rueda de Color -->
    <com.chema.proyectofinalapkbluetooth.ColorWheelView
        android:id="@+id/colorWheel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <!-- Indicador de color seleccionado -->
    <View
        android:id="@+id/viewSelectedColor"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_circle_white"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/colorWheel"
        app:layout_constraintStart_toEndOf="@+id/colorWheel" />

    <!-- Sección Colores Favoritos -->
    <TextView
        android:id="@+id/tvFavColorsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Colores favoritos"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colorWheel" />

    <LinearLayout
        android:id="@+id/layoutFavColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFavColorsLabel">

        <View
            android:id="@+id/btnColor1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_color_btn"
            android:backgroundTint="#00FFFF"/> <!-- Cyan -->

        <View
            android:id="@+id/btnColor2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_color_btn"
            android:backgroundTint="#FF00FF"/> <!-- Magenta -->

        <View
            android:id="@+id/btnColor3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_color_btn"
            android:backgroundTint="#8A2BE2"/> <!-- BlueViolet -->

        <View
            android:id="@+id/btnColor4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_color_btn"
            android:backgroundTint="#00FF7F"/> <!-- SpringGreen -->
    </LinearLayout>

    <!-- Botón de Encendido -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPower"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:text="Encendido"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_power"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutFavColors"
        app:strokeColor="#40FFFFFF"
        app:backgroundTint="#20FFFFFF"/>
        
    <!-- Control de Brillo -->
    <SeekBar
        android:id="@+id/sbBrightness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:max="100"
        android:progress="100"
        android:progressTint="@android:color/white"
        android:thumbTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPower" />

    <!-- Sección Dispositivos -->
    <TextView
        android:id="@+id/tvDevicesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Dispositivos"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbBrightness" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnScan"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escanear"
        android:textColor="#80FFFFFF"
        app:icon="@drawable/ic_bluetooth_searching"
        app:iconTint="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tvDevicesLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDevicesLabel" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDevices"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#20FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tvModesLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDevicesLabel">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_bluetooth_device"/>
    </androidx.cardview.widget.CardView>
    
    <!-- Sección Modos -->
    <TextView
        android:id="@+id/tvModesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="Modos"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:alpha="0.7"
        app:layout_constraintBottom_toTopOf="@+id/layoutModes"
        app:layout_constraintStart_toStartOf="parent" />
        
    <LinearLayout
        android:id="@+id/layoutModes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMusicMode">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFlash"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Flash"
            android:textColor="@android:color/white"
            app:strokeColor="#40FFFFFF"
            android:layout_marginEnd="8dp"/>
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStrobe"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Strobe"
            android:textColor="@android:color/white"
            app:strokeColor="#40FFFFFF"
            android:layout_marginEnd="8dp"/>
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFade"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fade"
            android:textColor="@android:color/white"
            app:strokeColor="#40FFFFFF"/>
            
    </LinearLayout>

    <!-- Botón Audio Reactivo -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMusicMode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="Audio Reactivo"
        android:textColor="@android:color/white"
        app:backgroundTint="#40FFFFFF" 
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_btn_speak_now"
        app:iconTint="@android:color/white"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>