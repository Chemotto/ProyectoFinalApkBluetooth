<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Panel Superior: Botones de Escaneo y Estado -->
    <Button
        android:id="@+id/btnScan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Escanear Dispositivos"
        app:layout_constraintEnd_toStartOf="@+id/btnDisconnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Desconectar"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnScan"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado: Inactivo"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnScan" />

    <!-- VISTA 1: Lista de Dispositivos (Visible al inicio) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDevices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

    <!-- VISTA 2: Panel de Configuración/Controles (Oculto al inicio) -->
    <ScrollView
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Control de Luces"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Selector de Protocolo (Horizontal Scroll para más opciones) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protocolo (Prueba si no responde):"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>
                
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                
                <RadioGroup
                    android:id="@+id/rgProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <RadioButton
                        android:id="@+id/rbMagic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Magic"
                        android:checked="true"/>
                        
                    <RadioButton
                        android:id="@+id/rbTriones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Triones"/>

                    <RadioButton
                        android:id="@+id/rbZengge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zengge"/>
                        
                    <RadioButton
                        android:id="@+id/rbGeneric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raw"/>
                </RadioGroup>
            </HorizontalScrollView>

            <!-- Rueda de Color (Color Wheel) -->
            <com.chema.proyectofinalapkbluetooth.ColorWheelView
                android:id="@+id/colorWheel"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp"/>

            <!-- Indicador de color seleccionado -->
            <View
                android:id="@+id/viewSelectedColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Control de Brillo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brillo"
                android:textStyle="bold"/>
            
            <SeekBar
                android:id="@+id/sbBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="100"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"/>

            <!-- Favoritos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favoritos (Manten pulsado para guardar)"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btnFav1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#CCCCCC"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnFav2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#CCCCCC"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnFav3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#CCCCCC"
                    android:layout_margin="4dp"/>
                <Button
                    android:id="@+id/btnFav4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#CCCCCC"
                    android:layout_margin="4dp"/>
            </LinearLayout>

            <!-- Botones de Efectos y Power -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modos"
                android:textStyle="bold"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnFlash"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flash"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnStrobe"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strobe"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnFade"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fade"/>
            </LinearLayout>

             <!-- Botón Modo Música y Power -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">
                
                <Button
                    android:id="@+id/btnMusicMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Música"
                    android:layout_marginEnd="16dp"/>
                
                <Button
                    android:id="@+id/btnPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power"
                    android:backgroundTint="#E53935"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>